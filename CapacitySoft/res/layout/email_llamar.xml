<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@drawable/s"
     >

    <Button
        android:id="@+id/btn_llamar"
       
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
      android:background="@drawable/botonpulsado"
        android:text="Llamar"
      android:textColor="#EDE7F6" />

	 <Button
	     android:id="@+id/btn_cancelaremaillamar"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_alignParentRight="true"
	     android:layout_alignParentTop="true"
	     android:background="@drawable/botonpulsa"
	     android:text="Atras"
	     android:textColor="#EDE7F6"
	     android:textSize="15sp"
	     android:textStyle="bold" />

    <Button
        android:id="@+id/btn_correo"
        
      android:background="@drawable/botonpulsado"
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:layout_above="@+id/btn_llamar"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="19dp"
      

        android:text="Enviar Correo"
        android:textColor="#EDE7F6"/>

    <Button
        android:id="@+id/btn_sms"
     
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_llamar"
        android:layout_marginTop="30dp"
     android:background="@drawable/botonpulsado"
        android:text="Enviar SMS"
        android:textColor="#EDE7F6"/>

    <TextView
        android:id="@+id/lbl_recp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_correo"
        android:layout_marginBottom="40dp"
        android:text="Escoja una opciÃ³n"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#263238"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/s"
     >

    <Button
        android:id="@+id/btn_iniciaeva"
        android:layout_width="250dp"
    android:layout_height="53dp"
    android:background="@drawable/botonpulsado"
     android:textColor="#EDE7F6"
    android:textSize="23sp" 
        android:layout_above="@+id/btn_cancelarevaluacion"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="55dp"
        android:layout_marginRight="42dp"
        android:text="Iniciar Evaluacion"
        />

    <TextView
        android:id="@+id/lbl_nombreprueba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_iniciaeva"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
          android:textColor="#263238"
    android:textSize="30sp"
    android:textStyle="bold" />

    <Button
        android:id="@+id/btn_cancelarevaluacion"
             android:layout_width="250dp"
    android:layout_height="53dp"
     android:background="@drawable/botoncancela"
     android:textColor="#EDE7F6"
        android:layout_alignLeft="@+id/btn_iniciaeva"
        android:layout_centerVertical="true"
        android:text="Cancelar" />

</RelativeLayout>

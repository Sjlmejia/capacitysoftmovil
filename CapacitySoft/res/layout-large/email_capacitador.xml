<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/s" >

    <Button
        android:id="@+id/btn_emailcapacitador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/botonpulsa"
        android:text="Cancelar"
        android:textColor="#EDE7F6"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/lbl_temap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_emailcapacitador"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="Contenido del Mensaje"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#263238"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/txt_correoCapacitador"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/btn_enviarMensaje"
        android:layout_alignRight="@+id/lbl_temap"
        android:layout_below="@+id/lbl_temap"
        android:layout_marginTop="57dp"
        android:background="#FAFAFA"
        android:ems="10"
        android:hint="Escriba aquÃ­ su mensaje"
        android:inputType="textMultiLine"
        android:textColor="#2E2E2E"
        android:textColorHint="#757575"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_enviarMensaje"
  android:layout_width="300dp"
        android:layout_height="63dp"
        android:layout_alignRight="@+id/lbl_temap"
        android:layout_below="@+id/txt_correoCapacitador"
        android:layout_marginTop="109dp"
        android:background="@drawable/botonpulsado"
        android:text="Enviar Mensaje"
        android:textColor="#EDE7F6"
        android:textSize="25sp"
        tools:ignore="HardcodedText" />

</RelativeLayout>
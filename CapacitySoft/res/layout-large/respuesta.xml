<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/s"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lyt_respuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="36dp"
        android:layout_marginTop="78dp"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/lbl_cedula2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_guardarRespuesta"
        android:layout_width="300dp"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="160dp"
        android:background="@drawable/botonpulsado"
        android:text="Guardar Respuesta"
        android:textColor="#EDE7F6"
        android:textSize="28sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_cancelarrespuesta"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btn_guardarRespuesta"
        android:layout_marginTop="79dp"
        android:background="@drawable/botoncancela"
        android:text="Atras"
        android:textColor="#EDE7F6"
        android:textSize="28sp"
        tools:ignore="HardcodedText" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/s"
     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_cancelarmenuprincipal"
            android:layout_width="300dp"
            android:layout_height="43dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="68dp"
            android:background="@drawable/botoncancela"
            android:text="Cancelar"
            android:textColor="#EDE7F6" 
             android:textSize="28sp"
            />

        <Button
            android:id="@+id/btn_captwi"
            android:layout_width="300dp"
            android:layout_height="63dp"
            android:layout_above="@+id/btn_cancelarmenuprincipal"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="34dp"
            android:background="@drawable/botonpulsado"
            android:text="Twitter"
            android:textColor="#EDE7F6"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/txt_capRecuperada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="66dp"
            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#263238"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_recurso"
         android:layout_width="300dp"
            android:layout_height="63dp"
            android:layout_above="@+id/btn_concap"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="42dp"
            android:background="@drawable/botonpulsado"
            android:text="Recursos"
            android:textColor="#EDE7F6"
            android:textSize="28sp" />

        <Button
            android:id="@+id/btn_concap"
            android:layout_width="300dp"
            android:layout_height="63dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/botonpulsado"
            android:text="Consultar Capacitador"
            android:textColor="#EDE7F6"
            android:textSize="28sp" />

        <Button
            android:id="@+id/btn_prueba"
           android:layout_width="300dp"
            android:layout_height="63dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/btn_concap"
            android:layout_marginTop="27dp"
            android:background="@drawable/botonpulsado"
            android:text="Rendir Prueba"
            android:textColor="#EDE7F6"
            android:textSize="28sp" />

        <Button
            android:id="@+id/btn_iCapacitacion"
            android:layout_width="300dp"
            android:layout_height="63dp"
            android:layout_above="@+id/btn_recurso"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="25dp"
            android:background="@drawable/botonpulsado"
            android:text="Información Capacitación"
            android:textColor="#EDE7F6"
            android:textSize="28sp" />

    </RelativeLayout>

</RelativeLayout>

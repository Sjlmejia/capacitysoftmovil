<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/s"
     >

    <TextView
        android:id="@+id/lbl_nombreprueba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_iniciaeva"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
          android:textColor="#263238"
    android:textSize="35sp"
    android:textStyle="bold" />

    <Button
        android:id="@+id/btn_cancelarevaluacion"
            android:layout_width="300dp"
            android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="295dp"
        android:background="@drawable/botoncancela"
        android:text="Cancelar"
        android:textColor="#EDE7F6"
        android:textSize="28sp"
         />

    <Button
        android:id="@+id/btn_iniciaeva"
             android:layout_width="300dp"
            android:layout_height="63dp"
        android:layout_above="@+id/btn_cancelarevaluacion"
        android:layout_alignLeft="@+id/btn_cancelarevaluacion"
        android:layout_marginBottom="54dp"
        android:background="@drawable/botonpulsado"
        android:text="Iniciar Evaluacion"
        android:textColor="#EDE7F6"
        android:textSize="28sp" />

</RelativeLayout>
